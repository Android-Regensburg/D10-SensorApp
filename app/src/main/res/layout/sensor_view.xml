<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/log_entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:padding="20dp"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="90"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sensor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sensor_name_placeholder"
            android:textAlignment="textStart"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/sensor_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sensor_info_placeholder"
            android:textAlignment="textStart"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sensor_values"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/sensor_values_placeholder"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>


</LinearLayout>
